<div id="subjects_info">
  <div class="top">
  </div>
  <div class="center">
    <center>
      <table class="subjects_info">
        <tr><th>Subject<br />(Teacher)</th><th>Hashtag</th></tr>
	  <% @subjects_info.each do |subject_info| %>
            <tr><td><%= subject_info.subject.name %><br />(<%= subject_info.teacher.name %>)</td>
	    <td>
	    <% if subject_info.hashtags.count > 0 %>
	      <% subject_info.hashtags.each do |hashtag| %>
                <% hashtag %><%= 'edit' %>
	      <% end %>
	    <% else %>
              <%= link_to 'add', :subject_info_id => subject_info.id, :action => 'add' %>
	    <% end %>
	    </td></tr>
	  <% end %>
<% if false %>
            <%= link_to 'add', :action => 'edit', :hashtag_id => @hashtags[i].id, :todo => 'add_hashtag' %>
            <%= link_to @hashtags[i].hashtag, "https://twitter.com/intent/tweet?text=%23"+@hashtags[i].hashtag[1..@hashtags[i].hashtag.size-1] %><br />
<% end %>
      </table>

    </center>
  </div>
  <div class="bottom">
  </div>
</div>
